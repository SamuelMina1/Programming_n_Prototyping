import math
import random
random = random.randint(1, 100)

user_num = float(input("Enter a number: "))

sum_result = random + user_num
difference_result = random - user_num
product_result = random * user_num
quotient_result = random / user_num
remainder_result = random % user_num
square_root_random = math.sqrt(random)
exponent_result = math.pow(user_num, random)


print("Random Number: ", (random))
print("User's Number: ", (user_num))
print("Sum: ", (sum_result))
print("Difference: ", (difference_result))
print("Product: ", (product_result))
print("Quotient: ", (quotient_result))
print("Remainder: ", (remainder_result))
print("Square Root of Random Number: ", (square_root_random))
print("User's Number raised to the Power of Random Number: ",(exponent_result))

